package Basics;

public class Weather {

	public static void main(String[] args) {
		// This program will give suggestions what to wear based on climate.
		int temperature=5;
		int sunCondition="Sunny";
		if(temperature > 40) {
			System.out.print("it is summer and wear loose dress");
		}
		else if(temperature<20) {
			System.out.print("it is rainy ,little bit cold wear some full sleeves.");
		}
		else {
			System.out.print("the winter season");
		}

	}

}
